<odoo>
    <!-- Tree View for student.id -->
    <record id="view_student_id_tree" model="ir.ui.view">
        <field name="name">student.id.tree</field>
        <field name="model">student.id</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference"/>
                <field name="student_id"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <!-- Form View for student.id -->
    <record id="view_student_id_form" model="ir.ui.view">
        <field name="name">student.id.form</field>
        <field name="model">student.id</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name = "status" widget = "statusbar" options = "{'clickable': '1'}" />
                </header>
                <sheet>
                    <group>
                        <field name="reference" readonly = "True"/>
                        <field name="student_id"/>
                        <field name="date"/>
                    </group>
                </sheet>
                <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                <field name="message_ids" widget="mail_thread"/>
            </form>
        </field>
    </record>

    <record id="action_student_id" model="ir.actions.act_window">
        <field name="name">Student ID</field>
        <field name="res_model">student.id</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
