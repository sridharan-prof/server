<odoo>
    <record id="view_supermarket_inventory_tree" model="ir.ui.view">
        <field name="name">supermarket.inventory.tree</field>
        <field name="model">supermarket.inventory</field>
        <field name="arch" type="xml">
            <tree>
                <field name = "name" />
                <field name = "cost_price" />
                <field name = "max_stock" />
                <field name = "reorder_level" />
                <field name = "expiry_date" />
            </tree>
        </field>
    </record>

    <record id="view_supermarket_inventory_form" model="ir.ui.view">
        <field name="name">supermarket.inventory.form</field>
        <field name="model">supermarket.inventory</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="cost_price" />
                        <field name="max_stock" />
                        <field name="reorder_level" />
                        <field name="expiry_date" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
