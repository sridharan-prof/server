<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <record id="employee_ticket_email_template" model="mail.template">
            <field name="name">Employee Ticket Email</field>
            <field name="model_id" ref="employee_self_service.model_employee_ticket"/>
            <field name="subject">Your Ticket: ${object.name}</field>
            <field name="email_from">${object.create_uid.email_formatted}</field>
            <field name="email_to">${object.employee_id.work_email or ''}</field>
            <field name="body_html" type="html">
                <![CDATA[
                    <p>Hello ${object.employee_id.name},</p>
                    <p>Your ticket <strong>${object.name}</strong> has been received.</p>
                    <p>Status: <strong>${object.state}</strong></p>
                    <p>Thank you,<br/>HR Team</p>
                ]]>
            </field>
        </record>

    </data>
</odoo>
