<odoo>
    <template id="employee_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call = "web.external_layout">
                    <div class="page">
                        <h2>Employee Details</h2>
                        <p><strong>Name:</strong> <t t-esc="doc.employee_id.name"/></p>
                        <p><strong>Employee ID:</strong> <t t-esc="doc.employee_id"/></p>
                        <p><strong>Department:</strong> <t t-esc="doc.department_id.name"/></p>
                        <p><strong>Job Position:</strong> <t t-esc="doc.job_position"/></p>
                        <p><strong>Email:</strong> <t t-esc="doc.work_mail"/></p>
                        <p><strong>Mobile:</strong> <t t-esc="doc.work_mobile"/></p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
