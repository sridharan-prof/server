<odoo>


    <!-- Tree view -->
    <record id="employee_ticket_view_tree" model="ir.ui.view">
        <field name="name">employee.ticket.tree</field>
        <field name="model">employee.ticket</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="category"/>
                <field name="description"/>
                <field name="attachment"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="employee_ticket_view_form" model="ir.ui.view">
        <field name="name">employee.ticket.form</field>
        <field name="model">employee.ticket</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="employee_id"/>
                        <field name="department_id"/>
                        <field name="category"/>
                        <field name="description"/>
                        <field name="attachment"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
