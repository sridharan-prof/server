<odoo>


    <!--Employee Action -->
    <record id="action_employee_selfservice" model="ir.actions.act_window">
        <field name="name">Employee Self Service</field>
        <field name="res_model">employee.selfservice</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'group_by': 'department_id'}</field>
    </record>

    <!--Attendance Action -->
    <record id="action_employee_attendance" model="ir.actions.act_window">
        <field name="name">Employee attendance</field>
        <field name="res_model">employee.attendance</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--Attendance Action -->
    <record id="action_employee_info" model="ir.actions.act_window">
        <field name="name">Employee info</field>
        <field name="res_model">info.update.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--Attendance Action -->
    <record id="action_employee_leave" model="ir.actions.act_window">
        <field name="name">Leave status</field>
        <field name="res_model">leave.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--Payslip Action -->
    <record id="action_employee_payslip" model="ir.actions.act_window">
        <field name="name">Employee payslip</field>
        <field name="res_model">employee.payslip</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--Appraisal Action-->
    <record id = "action_employee_self_appraisal" model = "ir.actions.act_window">
        <field name = "name">Employee Appraisal</field>
        <field name = "res_model">employee.appraisal</field>
        <field name = "view_mode">tree,form</field>
    </record>

    <!--Ticket submission Action-->
    <record id = "action_employee_ticket_submission" model = "ir.actions.act_window">
        <field name = "name">Employee Ticket Submission</field>
        <field name = "res_model">employee.ticket</field>
        <field name = "view_mode">tree,form</field>
    </record>

    <!--Feedback Action-->
    <record id = "action_employee_feedback" model = "ir.actions.act_window">
        <field name = "name">Employee feedback</field>
        <field name = "res_model">employee.feedback</field>
        <field name = "view_mode">tree,form</field>
    </record>

    <!--Employee Tag-->
    <record id="action_employee_tag" model="ir.actions.act_window">
        <field name="name">Employee Tag</field>
        <field name="res_model">employee.tag</field>
        <field name="view_mode">tree</field>
    </record>

    <!--Department-->
    <record id="action_hr_department_custom" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">hr.department</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
    
    <!--Org Action -->
    <record id="action_employee_org_chart" model="ir.actions.act_window">
        <field name="name">Org Chart</field>
        <field name="res_model">employee.selfservice</field>
        <field name="view_mode">hierarchy</field>
        <field name="views" eval="[(ref('employee_self_service.view_employee_selfservice_hierarchy'), 'hierarchy')]"/>
    </record>

</odoo>