    <odoo>

        <!--Tree view-->
        <record id = "view_employee_info_tree" model = "ir.ui.view">
            <field name = "name">info.update.request.tree</field>
            <field name = "model">info.update.request</field>
            <field name = "arch" type = "xml">
                <tree>
                    <field name = "employee_id" />
                    <field name = "field_to_update" />
                    <field name = "old_value" />
                    <field name = "new_value" />
                </tree>
            </field>
        </record>

        <!--Form view-->
        <record id = "view_employee_info_form" model = "ir.ui.view">
            <field name = "name">info.update.request.form</field>
            <field name = "model">info.update.request</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="employee_id"/>
                            <field name="field_to_update"/>
                            <field name="old_value"/>
                            <field name="new_value"/>
                        </group>
                    </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
                </form>
            </field>
        </record>

    </odoo>