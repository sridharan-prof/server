<odoo>

    <!--Tree view-->
    <record id = "employee_info_view_tree" model = "ir.ui.view">
        <field name = "name">info.update.request.tree</field>
        <field name = "model">info.update.request</field>
        <field name = "arch" type = "xml">
            <tree>
                <field name = "employee_id" />
                <field name = "field_to_update" />
                <field name = "old_value" />
                <field name = "new_value" />
            </tree>
        </field>
    </record>

    <!--Form view-->
    <record id = "employee_info_view_form" model = "ir.ui.view">
        <field name = "name">info.update.request.form</field>
        <field name = "model">info.update.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="field_to_update"/>
                        <field name="old_value"/>
                        <field name="new_value"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>