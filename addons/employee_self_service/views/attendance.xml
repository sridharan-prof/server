<odoo>
    <!-- Tree View -->
    <record id="employee_attendance_view_tree" model="ir.ui.view">
        <field name="name">employee.attendance.tree</field>
        <field name="model">employee.attendance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="employee_attendance_view_form" model="ir.ui.view">
        <field name="name">employee.attendance.form</field>
        <field name="model">employee.attendance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="check_in"/>
                        <field name="check_out"/>
                        <field name="duration"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
