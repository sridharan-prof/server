<odoo>

    <!-- Tree View -->
    <record id="view_employee_feedback_tree" model="ir.ui.view">
        <field name="name">employee.feedback.tree</field>
        <field name="model">employee.feedback</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="feedback_type" />
                <field name="message" />
                <field name="is_anonymous" />
                <field name="submitted_by_display" />
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_employee_feedback_form" model="ir.ui.view">
        <field name="name">employee.feedback.form</field>
        <field name="model">employee.feedback</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="feedback_type" />
                        <field name="message" />
                        <field name="is_anonymous" />
                        <field name="employee_id" modifiers ="{'invisible': [('is_anonymous','=',True)], 'readonly': [('is_anonymous','=',True)]}" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


</odoo>