<odoo>

    <!-- Tree View -->
    <record id="employee_feedback_view_tree" model="ir.ui.view">
        <field name="name">employee.feedback.tree</field>
        <field name="model">employee.feedback</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="feedback_type" />
                <field name="message" />
                <field name="is_anonymous" />
                <field name="submitted_by_display" />
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="employee_feedback_view_form" model="ir.ui.view">
        <field name="name">employee.feedback.form</field>
        <field name="model">employee.feedback</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="hr_action" type="object" string="hr" />
                    <field name="feedback_type" widget="statusbar" options="{'clickable': '1'}" />
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="feedback_type" />
                        <field name="message" />
                        <field name="is_anonymous" />
                        <field name="employee_id" modifiers ="{'invisible': [('is_anonymous','=',True)], 'readonly': [('is_anonymous','=',True)]}" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>